<Configuration>
	<Appenders>
		<Console name="console">
			<PatternLayout>
				<pattern>%d{yyyy-MM-dd HH:mm:ss}  %-5p %c{1}.%M:%L - %m%n
				</pattern>
			</PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
	</Loggers>
	<Loggers>
		<Logger name="com.vmaddiwar.weather" level="DEBUG"></Logger>
		<Root level="INFO">
			<AppenderRef ref="console" />
		</Root>
	</Loggers>
</Configuration>